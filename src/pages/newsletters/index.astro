---
import { getCollection } from "astro:content";
import SanctuaryLayout from "../../layouts/SanctuaryLayout.astro";
import Card from "../../components/ui/Card.astro";

const newsletters = await getCollection("newsletters");
const sortedNewsletters = newsletters.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<SanctuaryLayout title="Newsletters">
  <div class="bg-stone-50 min-h-screen py-12 sm:py-24">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1
          class="text-4xl font-bold tracking-tight text-stone-900 sm:text-5xl font-serif mb-4"
        >
          Newsletters
        </h1>
        <p class="text-lg text-stone-600 max-w-2xl mx-auto">
          Stay up to date with the latest news, stories, and updates from our church community.
        </p>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
      >
        {
          sortedNewsletters.length === 0 ? (
            <p class="col-span-full text-center text-stone-600 text-lg">No newsletters found.</p>
          ) : (
            sortedNewsletters.map((newsletter) => (
              <Card href={`/newsletters/${newsletter.slug}`}>
                {/* Simple icon for newsletter */}
                 <div slot="image" class="aspect-video bg-stone-100 flex items-center justify-center text-stone-400 border-b border-stone-200">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
                    </svg>
                </div>

                <div class="flex flex-col h-full">
                  <div class="text-xs font-bold text-[#D4AF37] uppercase tracking-wider mb-2">
                    {newsletter.data.date.toLocaleDateString("en-US", { month: 'long', year: 'numeric' })}
                  </div>
                  <h3 class="text-xl font-bold text-stone-900 mb-2 line-clamp-2">
                    {newsletter.data.title}
                  </h3>
                  <p class="text-sm text-stone-700 line-clamp-3 mb-4">
                    {newsletter.data.description}
                  </p>
                </div>
              </Card>
            ))
          )
        }
      </div>
    </div>
  </div>
</SanctuaryLayout>
