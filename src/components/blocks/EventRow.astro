---
interface Props {
  event: any; // Using 'any' for simplicity with collection entries, ideally use specific CollectionEntry type
}

const { event } = Astro.props;
---

<div class="flex gap-6 items-start bg-white p-6 rounded-sm shadow-sm hover:shadow-md transition-shadow border-l-4 border-[#D4A373]">
  <!-- Date Badge -->
  <div class="text-center min-w-[60px]">
    <span class="block text-xs font-bold text-slate-400 uppercase tracking-wider">
      {event.data.date.toLocaleDateString('en-US', { month: 'short' })}
    </span>
    <span class="block text-2xl font-serif font-bold text-[#1E293B]">
      {event.data.date.getDate()}
    </span>
  </div>
  
  <!-- Details -->
  <div class="flex-1">
    <h4 class="font-serif text-xl font-bold text-[#1E293B] mb-1 line-clamp-1">
      <a href={`/events/${event.slug}`} class="hover:text-[#D4A373] transition-colors">
        {event.data.title}
      </a>
    </h4>
    <div class="flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-slate-500 mb-3 font-sans">
      <span class="flex items-center gap-1">
        ‚è∞ {event.data.time}
      </span>
      <span class="flex items-center gap-1">
        üìç {event.data.location}
      </span>
    </div>
    
    <div class="flex gap-3 mt-2">
      <a href={`/events/${event.slug}`} class="text-xs font-bold text-slate-400 hover:text-[#1E293B] uppercase tracking-wide">
        Details
      </a>
      {event.data.registration_link && (
        <span class="text-slate-300">|</span>
        <a href={event.data.registration_link} class="text-xs font-bold text-[#D4A373] hover:text-[#B08D55] uppercase tracking-wide">
          Register
        </a>
      )}
    </div>
  </div>
</div>
